{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Post",
  "description": "A blog post",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "title": {
      "type": "string",
      "minLength": 3
    },
    "body": {
      "type": "string",
      "minLength": 10
    }
  },
  "required": [
    "title",
    "body"
  ]
}
