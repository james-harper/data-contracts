{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Todo",
  "description": "A Todo",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "description": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "format": "full-date full-time"
    },
    "completed": {
      "type": "boolean"
    }
  },
  "required": [
    "description",
    "date",
    "completed"
  ]
}
